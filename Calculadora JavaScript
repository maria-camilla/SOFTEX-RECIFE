<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SOFTEX - AULA TERÇA</title>
    </head>
    </html>
<body>
    <script type="text/javascript">
        var x = parseInt(prompt("Digite um número!"))
        var operação = String(prompt("Digite o operador + - * / X):"))  
        var y = parseInt(prompt("Digite outro número!"))
    if (operação=="X") {
        exit();
    } else if (operação=="+"){
        result1 = (x+y);
        prompt("TOTAL: ", result1);
    } else if (operação=="-"){
        result2 = (x-y);
        prompt("TOTAL: ", result2);
    } else if (operação=="*"){
        result3 = (x*y);
        prompt("TOTAL: ", result3);
    } else if(operação=="/"){
        result4 = (x/y);
        prompt("TOTAL: ", result4);
    } else {
        alert("Essa opção não existe!")
    }
    </script>
</body>
</html>
